@@ -1445,6 +1454,7 @@
 			pk_backend_job_set_status (job, PK_STATUS_ENUM_REMOVE);
 			break;
 		case UPDATE:
+		case UPGRADE:
 			pk_backend_job_set_status (job, PK_STATUS_ENUM_UPDATE);
 			break;
 		}
@@ -1468,6 +1478,9 @@
 					// for updates we only care for updates
